{
  "manifest_version": 3,
  "name": "Safe Extension - Color Picker",
  "version": "1.0.0",
  "description": "A harmless color picker extension for web developers",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://example.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}




